doctype html
html(lang="en")
  head
    title CD Reviews - a place to share thoughts on beautiful albums
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css")
  body
    .navbar.navbar-default
      .container
        .navbar-header
          .navbar-brand CD Reviews

        ul.nav.navbar-nav
          li
            a(href="/albums") Albums
          //-li
            a(href="/books/mine") My Books

        p.navbar-text.navbar-right
          if profile
            if profile.image
              img.img-circle(src=profile.image.url, width=24)
            span #{profile.displayName} &nbsp;
              a(href=logout) (logout)
          else
            a(href=login) Login

    .container
      block content